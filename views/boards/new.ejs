<html lang="en">
	<head>
		<%- include('../partials/head.ejs') %>
	</head>
	<body>
		<%- include('../partials/nav.ejs') %>
		<main class="main">
			<h1>New board</h1>
			<a href="#" onclick="history.go(-1)">Back</a>
			<form class="form-input" action="/boards" method="post">
