<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head.ejs') %>
	</head>
	<body>
		<header>
			<%- include('../partials/nav.ejs') %>
		</header>
		<main class="main container-fluid">
			<h1 class="page-header">Boards</h1>

			<% if (boards.length > 0) { %>
			<table class="table">
				<thead>
					<tr>
						<th>Name</th>
						<th>Key</th>
						<th>Created At</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% boards.forEach(board => { %>
					<tr class="board-row">
						<td><%= board.name %></td>
						<td class="key"><%= board.key %></td>
						<td><%= board.createdAt %></td>
						<td>
							<form
								action="/boards/<%= board._id %>?_method=DELETE"
								method="post"
							>
								<input class="btn btn-link" type="submit" value="Delete" />
							</form>
						</td>
					</tr>
					<% }) %>
				</tbody>
			</table>
			<% } %>

			<a href="/boards/new">+ Create board</a>
		</main>
	</body>
</html>
